<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingTop="18dp"
        tools:context=".UserSelectedInc">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.40"
                android:orientation="vertical"
                tools:context="com.example.android.babyhealth.MainActivity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inc Num : "
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/IncNum_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22dp"
                        android:text="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Child Name : "
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/ChildNum_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Date : "
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/Date_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                          />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Weight : "
                         
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/Weight_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                         
 />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Gender : "
                         

                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/Gender_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                         
 />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="ID Num : "
                         

                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/IdNum_UserInc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                         
 />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:paddingTop="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="BodyTemp = "
                         

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/BodyTemperature"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                         

                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:paddingLeft="20dp"
                        android:text="Heart = "
                         

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Heart"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                         

                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Humidity = "
                         

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Humidity"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                         

                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:paddingLeft="30dp"
                        android:text="Temp = "
                         

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Temperature"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                         

                        android:textSize="20dp" />

                </LinearLayout>

                <Button
                    android:id="@+id/ViewDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show details" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>